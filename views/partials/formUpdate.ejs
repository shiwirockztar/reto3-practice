<!-- Formulario -->
<form class="row g-3 needs-validation" action="/update" method="POST" novalidate>

    <div class="input-group" >
        <span class="input-group-text" >Paciente</span>
        <input type="text" id="name" name="name" placeholder="Nombre" class="form-control" value=<%= user.patient %> required>
        <input type="text" id="surName" name="surName" placeholder="Apellido"  class="form-control" >
        <input type="text" id="id" name="id" value="<%= user._id %>"  placeholder="Apellido"  class="form-control" hidden>
        <div class="valid-feedback">
            Correcto!
        </div>
    </div>
    <div class="col-md-5 me-5">
        <label for="documentType" class="form-label">Documento</label>
        <select class="form-select" id="documentType" name="documentType" required>
            <option value="ti" <% if (user.documentType=='ti') { %> selected<% } %> >ti</option>
            <option value="cc" <% if (user.documentType=='cc') { %> selected<% } %>>cc</option>
        </select>
    </div>
    <div class="col-md-5 ms-5 me-0">
        <label for="document" class="form-label">Numero</label>
        <input type="number" class="form-control" placeholder="numero" value="<%= user.document %>" id="document" name="document" tabindex="1" required>
    </div>

    <div class="col-md-4">
        <label for="validationCustomUsername" class="form-label">Email</label>
        <div class="input-group has-validation">
            <span class="input-group-text" id="inputGroupPrepend">@</span>
            <input type="text" class="form-control" id="email" name="email" aria-describedby="inputGroupPrepend" value="<%= user.email %>"required>
            <div class="invalid-feedback">
                Por favor introduzca un correo valido.
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <label for="validationCustom01" class="form-label">Direccion</label>
        <input type="text" class="form-control" id="address" name="address" value="<%= user.address%>" required>
        <div class="valid-feedback">
            Correcto!
        </div>
    </div>
    <div class="col-md-4">
        <label for="validationCustom02" class="form-label">Dentista</label>
        <input type="text" class="form-control" id="dentist" name="dentist" value="<%= user.dentist %>" required>
        <div class="valid-feedback">
            Correcto!
        </div>
    </div>
    <div class="col-md-5">
        <label for="validationCustom04" class="form-label">Tipo de sangre</label>
        <select class="form-select" id="blood"  name="blood" required>
            <option value="A" <% if (user.bloodType==('A+'||'A-')) { %> selected<% } %>>A</option>
            <option value="B" <% if (user.bloodType==('B+'||'B-')) { %> selected<% } %>>B</option>
            <option value="AB" <% if (user.bloodType==('AB+'||'AB-')) { %> selected<% } %>>AB</option>
            <option value="O" <% if (user.bloodType==('O+'||'O-')) { %> selected<% } %>>O</option>
        </select>
    </div>
    <div class="col-md-5">
        <label for="validationCustom04" class="form-label">Factor</label>
        <select class="form-select" id="Type" name="Type" required>
            <option<% if (user.bloodType==('A+'||'AB+'||'B+'||'O+')) { %> selected<% } %>>+</option>
            <option<% if (user.bloodType==('A-'||'AB-'||'B-'||'O-')) { %> selected<% } %>>-</option>
        </select>
        <div class="invalid-feedback">
            Campo obligatorio.
        </div>
    </div>
    <div class="col-md-6">
        <label for="validationCustom03" class="form-label">Tratamiento</label>
        <textarea type="text" class="form-control" id="treatment" name="treatment" value="" required><%= user.treatment %></textarea>
        <div class="invalid-feedback">
            Campo obligatorio.
        </div>
    </div>
    <div class="col-md-3">
        <label for="validationCustom05" class="form-label">Precio</label>
        <input type="number" class="form-control" id="price" name="price" value="<%= user.price %>" required>
        <div class="invalid-feedback">
            Campo obligatorio.
        </div>
    </div>
    <div class="col-md-3">
        <label for="validationCustom04" class="form-label">Estado</label>
        <input type="number" class="form-control" id="state" name="state" value="<%= user.state %>" required>
        <div class="invalid-feedback">
            Campo obligatorio.
        </div>
    </div>

    <button class="btn btn-success" type="submit">Validar</button>
    <div class="col-12">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
            <label class="form-check-label" for="invalidCheck">
                Acepto terminos y condiciones
            </label>
            <div class="invalid-feedback">
                Debes aceptar antes de guardar.
            </div>
        </div>
    </div>
    <div class="col-12">
        <button class="btn btn-primary" type="submit">Guardar</button>
        <a href="/" class="btn btn-secondary">Cancelar</a>
    </div>
</form>